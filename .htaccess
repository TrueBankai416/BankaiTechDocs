RewriteEngine On
# Check if maintenance flag file exists
RewriteCond maintenance/maintenance.flag -f
RewriteCond %{REQUEST_URI} !^/maintenance\.html$
RewriteRule ^ /maintenance/maintenance.html [R=503,L]
# Check if Docusaurus build exists
RewriteCond %{DOCUMENT_ROOT}/build/index.html !-f
RewriteCond %{REQUEST_URI} !^/maintenance\.html$
RewriteRule ^ /maintenance/maintenance.html [R=302,L]
